#!/bin/bash
# rapidget - Downloadmanager for rapidshare downloads
# Author: Alexander Surma <surma@drebesium.org> - released under GPL

# Settings
TMPDIR="$(mktemp -d /tmp/rapidget.XXX)"
COOKIEFILE="$HOME/.rapidget"

PATH="${PATH}:/usr/bin"
VERSION="1.0"
APPNAME=$(basename "${0}")
LOGINURL="https://ssl.rapidshare.com/cgi-bin/premiumzone.cgi"
version()
{
	echo "${APPNAME} v${VERSION}"
}

usage()
{
	version
	echo "${APPNAMNE} [OPTIONS...] [wget OPTIONS]"
	echo "  -c PATH 	use PATH as cookie file (default: ~/.rapidget"
	echo "  -u USERNAME	Login in with username (or prompt for it when empty)"
	echo "  -p PASSWORD	Login in with password (or prompt for it when empty)"
	echo "  -h 		This message"
	echo "  -v		Print version end exit"
	cleanup
	exit 1
}

cleanup()
{
	[ -n "${TMPDIR}" -a -d  "${TMPDIR}" ] && rm -rf "${TMPDIR}"
	stty echo > /dev/null
}

sighandler()
{
	cleanup
	exit 1
}

trap sighandler TERM INT

while getopts ':vfhc:u:p:' arg; do
	case "${arg}" in
		c) COOKIEFILE="${OPTARG}" ;;
		u) if [ -z "${OPTARG}" ]; then
	       		unset USERNAME
			PROMPT_USERNAME='y'
		   else
		   	unset PROMPT_USERNAME
	     		USERNAME="${OPTARG}"
		   fi ;;
		   p) if [ -z "${OPTARG}" ]; then
	       		unset PASSWORD
			PROMPT_PASSWORD='y'
		   else
		   	unset PROMPT_PASSWORD
	     		PASSWORD="${OPTARG}"
		   fi ;;
		v) version
		   cleanup
		   exit 0 ;;
		h|?) usage ;;
		*)
	esac
done
shift $((${OPTIND} - 1))
[ ! -r "${COOKIEFILE}" -a -z "${PROMPT_USERNAME}" -a -z "${USERNAME}" ] && PROMPT_USERNAME="y"
[ ! -r "${COOKIEFILE}" -a -z "${PROMPT_PASSWORD}" -a -z "${PASSWORD}" ] && PROMPT_PASSWORD="y"
if [ -n "${PROMPT_USERNAME}" ] ; then
	echo -n "Username: "
	read USERNAME
fi
if [ -n "${PROMPT_PASSWORD}" ] ; then
	echo -n "Password: "
	stty -echo
	read PASSWORD
	stty echo
	echo ""
fi
if [ ! -r "${COOKIEFILE}" -o -n "${PROMPT_PASSWORD}" -o -n "${PROMPT_PASSWORD}" ]; then
	echo "Logging in..."
	wget -O /dev/null --post-data "username=${USERNAME}&password=${PASSWORD}" --save-cookies "${COOKIEFILE}" $LOGINURL	
fi
echo "Starting download..."
while read LINE; do
	wget --load-cookies $@ "${COOKIEFILE}" "${LINE}"
done
